<section id="view-group">
    <header>
        <section>
            <div class="back"><img src="/img/round-arrow.png" alt="Back"></div>
            <div class="group-name"><%= name %></div>
            <div class="change-group-name">
                <img src="/img/edit.png" alt="Edit">
                <span>Change name</span>
            </div>
            
        </section>
        <section>
            <div class="change-status">
                <img src="/img/star.png" class="<%= isFavourite === false ? "crossed-out" : "" %>" alt="Favourite">
                <span>
                    <%= isFavourite === false ? "Add to favourites" : "Remove from favourites" %>
                </span>
            </div>
            <div class="new-word">
                <img src="/img/plus.png" alt="New word">
                <span>Add new word</span>
            </div>
            
            <div class="delete-group">
                <img src="/img/trash-can.png" alt="Delete group">
                <span>Delete group</span>
            </div>
        </section>
    </header>
    
    <main class="words-section loading">
        <!-- <img src="/img/rounded-blocks.gif" class="loading" alt="Loading"> -->
    </main>
</section>